<div class="nav-bot sticky-bottom">
  <%= link_to root_path, style: "text-decoration: none" do %>
    <div class="nav-bot-logo">
      <i class="fa-solid fa-house"></i>
      <p>Home</p>
    </div>
  <% end %>
    <div class="nav-bot-logo" data-bs-toggle="modal" data-bs-target="#qr-code-modal">
      <i class="fa-solid fa-qrcode"></i>
      <p>QR Code</p>
    </div>
  <%= link_to stamp_cards_path(current_user.id), style: "text-decoration: none" do  %>
    <div class="nav-bot-logo">
      <i class="fa-solid fa-stamp"></i>
      <p>My stamps</p>
    </div>
  <% end %>
  <%= link_to shops_path, style: "text-decoration: none" do  %>
    <div class="nav-bot-logo">
      <i class="fa-solid fa-magnifying-glass"></i>
      <p>Search</p>
    </div>
  <% end %>
</div>
<div data-controller="user-subscription" data-user-subscription-user-id-value="<%= current_user.id %>" class="modal fade" tabindex="-1" id="qr-code-modal">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">My QR Code</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="qr-code-card d-flex align-items-center justify-content-center">
            <div class="qr-code">
                <%= cl_image_tag current_user.qrcode.key, style: "border-radius: 8px;"  %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
